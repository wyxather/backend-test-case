generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Book {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  code   String
  title  String
  author String
  stock  Int
}

model Member {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  code            String
  name            String
  penalized_until DateTime?
}
